<mvc:View
    xmlns:f="sap.ui.layout.form"
    controllerName="com.bmw.xss.ess.dt.wzdtprototype.controller.Detail"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
    displayBlock="true"
	xmlns:l="sap.ui.layout"
    xmlns="sap.m"
    xmlns:t="sap.ui.table"
>
    <Page showHeader="false">
        <content>
            <VBox class="sapUiSmallMargin">
                <f:SimpleForm
                    id="Eigenschaften"
                    editable="true"
                    layout="ResponsiveGridLayout"
                    title="{EmployeeName}"
                    labelSpanXL="4"
                    labelSpanL="4"
                    labelSpanM="12"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="0"
                    emptySpanL="0"
                    emptySpanM="0"
                    emptySpanS="0"
                    columnsXL="2"
                    columnsL="2"
                    columnsM="1"
                    singleContainerFullSize="false"
                >
                    <f:content>
                        <core:Title text="Adresse" />
                        <Label text="Street/No." />
                        <Input value="{Street}" enabled="{viewModel>/control/isEditable}"/>
                        <Label text="ZIP Code/City" />
                        <Input value="{PostalCode}" enabled="{viewModel>/control/isEditable}">
                            <layoutData>
                                <l:GridData span="XL2 L3 M4 S4" />
                            </layoutData>
                        </Input>
                        <Input value="{City}" enabled="{viewModel>/control/isEditable}"/>
                        <Label text="Country" />
                        <Input
                            id="country"
                            value="{Country}" enabled="{viewModel>/control/isEditable}"
                        />

                        <core:Title text="Bankdaten" />
                        <Label text="IBAN" />
                        <Input value="{IBAN} " enabled="{viewModel>/control/isEditable}" />
                        <Label text="LÃ¤ndererkennung" />
                        <Input value="{BankCity}" enabled="{viewModel>/control/isEditable}"/>

                        <core:Title text="Parkplatz" />
                        <CheckBox
                            text="No Parking Place"
                            selected="false" enabled="{viewModel>/control/isEditable}"
                        />
                    </f:content>
                </f:SimpleForm>
            </VBox>
        </content>
		<footer>
			

            <Toolbar>
               
                <Button 
                    icon="sap-icon://alert"
                    text="{=${message>/}.length}"
                    visible="{=${message>/}.length > 0}"
                    type="Emphasized"
                    press="onMessagePopoverPress">
                </Button>


				<ToolbarSpacer/>
				<Button text="Save" press="onSavePressed" type="Accept" visible="{viewModel>/control/isEditable}"/>
				<Button text="Cancel" press="onCancelPressed" type="Reject" visible="{viewModel>/control/isEditable}"/>
				<Button text="Edit" press="onEditPressed" type="Emphasized" visible="{= !${viewModel>/control/isEditable} }"/>
			</Toolbar>
            


		</footer>
    </Page>
</mvc:View>
