<mvc:View xmlns:f="sap.m" controllerName="com.bmw.xss.ess.dt.wzdtprototype.controller.Detail" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:t="sap.ui.table">
   <core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core">
	<VBox class="sapUiSmallMargin">
			<f:SimpleForm id="Eigenschaften"
			editable="true"
			layout="ResponsiveGridLayout"
			title="{EmployeeName}"
			labelSpanXL="4"
			labelSpanL="4"
			labelSpanM="12"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="0"
			emptySpanL="0"
			emptySpanM="0"
			emptySpanS="0"
			columnsXL="2"
			columnsL="2"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<core:Title text="Adresse" />
				<Label text="Street/No." />
				<Input value="{Street}">
				</Input>
				<Label text="ZIP Code/City" />
				<Input value="{PostalCode}">
					<layoutData>
						<l:GridData span="XL2 L3 M4 S4" />
					</layoutData>
				</Input>
				<Input value="{City}" />
				<Label text="Country" />
				<Input id="country" value="{Country}"/>
					                   
				<core:Title text="Bankdaten" />
				<Label text="IBAN" />
				<Input value="{IBAN}"/>
				<Label text="LÃ¤ndererkennung" />
				<Input value="{BankCity}" />

                <core:Title text="Parkplatz" />
				<CheckBox text="No Parking Place" selected="false" />

			</f:content>
		</f:SimpleForm>
        
	</VBox>
</core:FragmentDefinition>
</mvc:View>
